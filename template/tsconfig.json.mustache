{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@framework/*": ["framework/*"],
      "@client/*": ["client/*"],
      "@server/*": ["server/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["build/**/*.ts", "client/**/*.ts", "server/**/*.ts"]
}
